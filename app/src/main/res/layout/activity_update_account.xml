<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10sdp"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:background="@color/orange"
            android:gravity="center"
            android:text="Cập nhật tài khoản"
            android:textColor="@color/white" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_45sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:scrollbars="none">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <LinearLayout
                    android:id="@+id/mLinearProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_40sdp"
                    android:background="@drawable/bg_shadow_add"
                    android:orientation="vertical">


                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/mEdtName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:background="@drawable/bg_shadow_textview"
                        android:hint="Tên"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_shadow_textview">

                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SĐT"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10sdp" />

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/mTvPhone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10sdp" />
                    </RelativeLayout>

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/mEdtHomeNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_shadow_textview"
                        android:hint="Số nhà"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp" />

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/mEdtStreet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_shadow_textview"
                        android:hint="Tên đường"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp" />

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/mEdtCountry"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_shadow_textview"
                        android:hint="Quận/huyện"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp" />

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/mEdtCity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_shadow_textview"
                        android:hint="Tỉnh/thành phố"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp" />

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/mEdtEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_shadow_textview"
                        android:hint="Email"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp" />
                </LinearLayout>

                <danazone.com.visu.CircleImageView
                    android:id="@+id/mImgAvatar"
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_90sdp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/banner" />
            </RelativeLayout>
        </ScrollView>
    </LinearLayout>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/mTvSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_40sdp"
        android:layout_marginRight="@dimen/_40sdp"
        android:layout_weight="1"
        android:background="@drawable/bg_button"
        android:gravity="center"
        android:text="Cập nhật"
        android:textColor="@color/white"
        android:textStyle="bold" />
</RelativeLayout>
