<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- rating bar-->
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/newtoolbar</item>
        <item name="colorControlActivated">@color/yellow</item>
    </style>

    <!-- TextView more -->
    <style name="TextViewMore">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:paddingLeft">@dimen/_8sdp</item>
        <item name="android:paddingRight">@dimen/_8sdp</item>
        <item name="android:color">@color/colorPrimaryDark</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
